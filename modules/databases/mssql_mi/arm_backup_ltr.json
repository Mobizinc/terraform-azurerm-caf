{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serverName": {
      "type": "string"
    },
    "dbName": {
      "type": "string"
    },
    "retentionDays": {
        "type": "string",
        "defaultValue": "7",
        "metadata": {
            "description": "The number of  retentionDays  ."
        }
    }
   },
  "resources": [
    {
        "type": "Microsoft.Sql/managedInstances/databases/backupShortTermRetentionPolicies",
        "apiVersion": "2022-05-01-preview",
        "name": "[concat(parameters('serverName'), '/', parameters('dbName'), '/default')]",
        "properties": {
            "retentionDays": "[if(equals(parameters('retentionDays'), ''), json('null'), parameters('retentionDays'))]"

        }
    }
  ]
}
